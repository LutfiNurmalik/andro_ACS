<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" SEARCH PROPER SHIPPING"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Proper Shipping Name"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="25sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="#fff"
        android:textSize="20sp"
        android:textColor="@color/blackdop"
        android:padding="10sp"
        android:hint="Proper Shipping Name"
        android:id="@+id/et_psn"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:text="SEARCH"
        android:background="#fff"
        android:textSize="20sp"
        android:id="@+id/tcari"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" HASIL PENCARIAN"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_gravity="center"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_psn"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="40dp"
            android:textColor="#fff"
            />

        <!--buat tampilin un id-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UN ID"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_UNID"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="#fff" />

        <!--buat tampilin class-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:layout_marginTop="25dp"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_class"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="#fff"
            />

        <!--buat tampilin hazard-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazard"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_hazard"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="#fff"
            android:layout_alignParentLeft="true"/>


        <!--buat tampilin nama kode dalam bahasa inggris-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Packing Grup"
            android:layout_marginTop="25dp"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_PackingGrup"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="#fff"
            android:layout_alignParentLeft="true"/>

        <!--buat tampilin PA-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passanger AirPlane"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="PKG Inst"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:textColor="#fff"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Max Net Qty/Pkg"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:textColor="#fff"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/txt_pa_pi"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#fff"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/txt_pa_max_qty"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#fff"
                android:layout_alignParentLeft="true"/>

        </LinearLayout>

        <!--buat tampilin CAO-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargo Aircraft Only"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="PKG Inst"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:textColor="#fff"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Max Net Qty/Pkg"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:textColor="#fff"
                android:textSize="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/txt_cao_pi"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#fff"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/txt_cao_max_qty"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#fff"
                android:layout_alignParentLeft="true"/>

        </LinearLayout>

        <!--buat tampilan SP-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SP"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_SP"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="#fff"
            android:layout_alignParentLeft="true"/>

        <!--buat tampilan ERG-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ERG Code"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_erg"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="#fff"
            android:layout_alignParentLeft="true"/>

    </LinearLayout>

    </ScrollView>



</LinearLayout>